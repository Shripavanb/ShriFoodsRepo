<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ShriFoods</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ShriFoodsProj.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a asp-controller="Home" asp-action="Index"><img src="~/img/ShriFoods_logo6.png" style="height:100px; width:100px" /></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Products">Products</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>
                </div>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <h5>Call us:<strong>8374499001</strong></h5>
                        </li>
                    </ul>
                </div>
            </div>                                   
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <br />
    <br />
    <br />
    <!-----------Refrence-Row--------------->
    <div class="container-fluid referencebg">
        <div class="row">
            @* <hr style="border-top: 5px solid darkblue"  /> *@
            <div class="container">
                <div class="row">
                    <div class="col-md-3">
                        <!-----------Logo and Address ------->
                        <div class="row-cols-1">
                            <a asp-controller="Home" asp-action="Index"><img src="~/img/ShriFoods_logo6.png" style="height:100px; width:100px" /></a>
                        </div>
                        <div class="row-cols-1">
                            <p><span class="glyphicon glyphicon-map-marker text-warning p-3"></span>Sri Sai Enclave, Spring Fields Colony, Jeedimetla</p>
                            <p>Hyderabad, Telangana 500067, India</p>
                        </div>
                    </div>
                    <!-----------Social media------->
                    <div class="col-md-3">
                        <h3>Media</h3>
                        <hr />
                        <ul>
                            <li style="display:block"><a href="#" class="icon-link"><i class="bi bi-linkedin"></i></a></li>
                            <li style="display:block"><a href="https://www.instagram.com/shriaitech?igsh=MThicHV3NnVzMWlzZA==" target="_blank" class="icon-link"><i class="bi bi-instagram"> Instagram </i></a></li>
                            <li style="display:block"><a href="#" class="icon-link"><i class="bi bi-twitter"></i></a></li>
                            <li style="display:block"><a href="#" class="icon-link"><i class="bi bi-facebook"></i></a></li>
                        </ul>
                    </div>
                    <!-----------Company------->
                    <div class="col-md-3">
                        <h3>Company</h3>
                        <hr />
                        <ul>
                            <li style="display:block"><a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
                            <li style="display:block"><a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Products">Products</a></li>
                            <li style="display:block"><a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a></li>
@*                             <li style="display:block"><a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="ContactUs">Contact Us</a></li>
                            <li style="display:block"><a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="AboutUs">About Us</a></li> *@
                        </ul>
                    </div>
                    <!-----------Contact Us------->
                    <div class="col-md-3">
                        <h3>Contact</h3>
                        <hr />
                        <ul>
                            <li style="display:block"><a><span class="glyphicon glyphicon-phone p-3"></span> +91 8374499001</a></li>
                            <li style="display:block"><a><span class="glyphicon glyphicon-envelope p-3"></span> shripavanb@shrifoods.in</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <br />
    <br />
    <br />
    <!--------Footer-------------------->
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - ShriFoods, Powered by <a href="https://shriaitech.in" target="_blank">Shri AI tech</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
